<p style="color: green"><%= notice %></p>

<h1 class='text-center'>Buses</h1>

<div class='buses-card'>
  <% @buses.each do |bus| %>
  <div id="buses" class='card'>
    <%= render bus %>
    <p>
      <%= link_to "Show travellers", bus_travellers_path(bus) %>
    </p>
    </div>
  <% end %>
</div>


<% if can? :create, Bus %>
  <p>
    <%= link_to "New bus", new_bus_path %>
  </p>
<% end %>

