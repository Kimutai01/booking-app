<h1>Listing travellers</h1>


<table>
  <tr>
    <th>Name</th>
    <th>Phone number</th>
    <th>Bus</th>
    <th>User</th>
    <th>Number of seats</th>
    <th></th>
    <th></th>
  </tr>


<% @travellers.each do |traveller| %>
<%= traveller.bus.registration%>
  <tr>
    <td><%= traveller.name %></td>
    <td><%= traveller.phone_number %></td>
    <td><%= traveller.bus %></td>
    <td><%= traveller.user %></td>
    <td><%= traveller.number_of_seats %></td>

    <td><%= link_to 'Show', [traveller.bus, traveller] %></td>
    <td><%= link_to 'Edit', edit_bus_traveller_path(traveller.bus, traveller) %></td>
    <td><%= button_to 'Destroy', [traveller.bus, traveller], method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />


<%= current_user.booked == true ? "You have already booked a seat" : link_to('Book a seat', new_bus_traveller_path) %>
